{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/MTVersionManager/mtvmplugin/refs/heads/main/plugin.schema.json",
  "title": "Plugin",
  "description": "MTVM plugin metadata",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of your plugin",
      "type": "string",
      "exclusiveMinimum": 0
    },
    "version": {
      "description": "Your plugin's latest version number (must be a semver compliant version number)",
      "type": "string",
      "exclusiveMinimum": 0
    },
    "osCompat": {
      "description": "What operating systems the plugin is compatible with",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "archCompat": {
      "description": "What CPU architectures the plugin is compatible with",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "download": {
      "description": "The link for the download of your plugin",
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "checksum": {
          "description": "SHA256 checksum of the download file",
          "type": "string"
        }
      }
    }
  },
  "required": ["name", "version", "download", "osCompat"]
}